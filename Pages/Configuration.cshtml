    // View service logs
    async function viewServiceLogs() {
        showInfo('Loading service logs...');
        
        try {
            const response = await fetch('/api/service/logs');
            const result = await response.json();
            
            if (result.logs && result.logs.length > 0) {
                // Create a simple log viewer modal
                let logContent = result.logs.map(log => 
                    `<h6>${log.fileName} (${new Date(log.lastModified).toLocaleString()})</h6>
                     <pre class="bg-dark text-light p-3" style="max-height: 200px; overflow-y: auto;">${log.lines.join('\n')}</pre>`
                ).join('<hr>');
                
                // Show logs in a simple alert (in a real app, you'd use a proper modal)
                const logWindow = window.open('', '_blank', 'width=800,height=600');
                logWindow.document.write(`
                    <html><head><title>Service Logs</title>
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
                    </head><body class="p-4">
                    <h3>Service Logs</h3>
                    ${logContent}
                    </body></html>
                `);
                logWindow.document.close();
            } else {
                showInfo(result.message || 'No log files found');
            }
        } catch (error) {
            showError('Error loading logs: ' + error.message);
        }
    }
